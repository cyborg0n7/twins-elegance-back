{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "php-fpm -y /assets/php-fpm.conf & ([ -e /assets/nginx.conf ] && nginx -c /assets/nginx.conf || nginx)",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}